{{> message}}

<h2>Register (CU Student Email Required)</h2>

<form action="/register" method="POST" class="w-50">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input 
      type="text" 
      class="form-control" 
      id="username" 
      name="username" 
      placeholder="Enter username" 
      required
    >
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input 
      type="password" 
      class="form-control" 
      id="password" 
      name="password" 
      placeholder="Enter password" 
      required
    >
  </div>

  <button type="submit" class="btn btn-success"><a href="/discovery"></a>Register</button>

  <p class="mt-3">
    Already have an account? <a href="/">Login here</a>
  </p>
</form>

{{> head }}
{{> siteheader }}
  <section class="hero">
    <h1>CU Marketplace</h1>
    <p class="hero-tagline">
      Buy, sell, and trade items with other CU students!
    </p>

    {{#if loggedIn}}
        <p class="hero-subtext">
            Welcome back, {{user.username}}!
        </p>
        <div class="hero-buttons"> <!-- START MODAL -->
            <a href="/post" class="btn">Browse Listings</a>

            <div class="custom-container">
                <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#post_modal">Create Post</button>
            </div>
            <div class="modal" tabindex="-1" id="post_modal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Create Post</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="post" action="/api/posts" method="post">
                                <input type="hidden" name="user_id" value="{{user.id}}">
                                <input type="hidden" name="contact_info" value="{{user.email}}" />
                                <input type="text" name="title" id="title" placeholder="Post Title" />
                                <input type="text" name="description" id="description" placeholder="Item Desc" />
                                <input type="number" name="price" id="price" step="0.01" placeholder="0.00" />
                                <select id="category_id" name="category_id">
                                    <option value="">No category</option>
                                    {{#each categories}}
                                        <option value="{{this.id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                                <input type="text" name="condition" id="condition" placeholder="Item Condition" />
                                <input type="text" name="location" id="location" placeholder="Location" />
                                <input type="url" name="image_url" id="image_url" placeholder="Image URL" />
                                <input type="submit" data-bs-dismiss="modal"/>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- END MODAL -->
            <a href="/logout" class="btn btn-ghost">Logout</a>
        </div>
    {{else}}
      <p class="hero-subtext">
        Log in with your CU credentials to get started.
      </p>
      <div class="hero-buttons">
        <a href="/login" class="btn">Log In</a>
        <a href="/register" class="btn btn-secondary">Create Account</a>
      </div>
    {{/if}}
  </section>

  <section class="section section-alt">
    <h2>How It Works</h2>
    <ol class="steps-list">
      <li><strong>Sign up</strong> with your CU email.</li>
      <li><strong>Browse</strong> listings from other students.</li>
      <li><strong>Post</strong> items you want to sell or trade.</li>
      <li><strong>Connect</strong> with other students to make a deal.</li>
    </ol>
  </section>
  {{>footer}}